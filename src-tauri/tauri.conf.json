{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "reaction-cut-rust",
  "version": "0.1.0",
  "identifier": "com.tbw.reaction-cut-rust",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5176",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "reaction-cut-rust",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "bin/macos/*",
      "bin/windows/*",
      "bin/linux/*",
      "bin/README.txt"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
